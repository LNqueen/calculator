<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 设置透明背景色 -->
    <solid android:color="@color/colorDark6" />

    <!-- 设置一个黑色边框 -->
    <stroke
        android:width="2px"
        android:color="@color/colorDark" />
    <!-- 设置四个圆角的半径 -->
    <corners
        android:bottomLeftRadius="600px"
        android:bottomRightRadius="600px"
        android:topLeftRadius="600px"
        android:topRightRadius="600px" />
    <!-- 设置一下边距,让空间大一点 -->
    <padding
        android:bottom="20dp"
        android:left="20dp"
        android:right="20dp"
        android:top="20dp" />

</shape>